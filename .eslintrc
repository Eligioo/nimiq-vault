{
    "extends": "standard",
    "env": {
        "mocha": true,
        "node": true
    },
    "parser": "babel-eslint",
    "rules": {
        "semi": ["error", "always"],
        "space-before-function-paren": ["error", {
            "anonymous": "never",
            "named": "never",
            "asyncArrow": "always"
        }]
    }
}